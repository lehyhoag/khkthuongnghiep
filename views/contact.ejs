    <script>
      let feeling = '';
      function isValidEmail(email) {
        // Simple email validation, you can use a more sophisticated method
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
      }

      function submitForm() {
        const fullNameInput = document.getElementById('fullName');
        const emailInput = document.getElementById('email');
        const numberInput = document.getElementById('number');
        const messageInput = document.getElementById('message');

        if (fullNameInput.value.trim() === '') {
            fullNameInput.classList.add('invalid');
        } else {
            fullNameInput.classList.remove('invalid');
        }

        if (!isValidEmail(emailInput.value)) {
            emailInput.classList.add('invalid');
        } else {
            emailInput.classList.remove('invalid');
        }

        // Check number
        if (numberInput.value.trim() === '' || isNaN(numberInput.value)) {
            numberInput.classList.add('invalid');
        } else {
            numberInput.classList.remove('invalid');
        }

        if (messageInput.value.trim() === '') {
            messageInput.classList.add('invalid');
        } else {
            messageInput.classList.remove('invalid');
        }

        if (
            !fullNameInput.classList.contains('invalid') &&
            !emailInput.classList.contains('invalid') &&
            !numberInput.classList.contains('invalid') &&
            !messageInput.classList.contains('invalid')
        ) {
            togglePopup();
        }
      }
        
