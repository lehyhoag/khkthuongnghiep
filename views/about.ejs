  <script>
    document.addEventListener("DOMContentLoaded", function() {
      showModel('model1', document.getElementById('line1'));
    });
  
    function showModel(modelId, clickedLine) {
      // Ẩn tất cả các model
      document.querySelectorAll('.model-container').forEach(function(model) {
        model.style.display = 'none';
      });
  
      // Loại bỏ lớp 'selected' từ tất cả các đoạn
      document.querySelectorAll('.line').forEach(function(line) {
        line.classList.remove('selected');
      });
  
      // Hiển thị model được chọn với hiệu ứng slideIn
      const selectedModel = document.getElementById(modelId);
      selectedModel.style.display = 'block';
      selectedModel.style.opacity = 0; 
      animateModel(selectedModel);
  
      // Thêm lớp 'selected' cho đoạn được chọn
      clickedLine.classList.add('selected');
    }
  
    function animateModel(model) {
      model.style.transition = 'opacity 0.5s ease';
      model.style.opacity = 0.8; 
      setTimeout(function() {
        model.style.opacity = 1; 
      }, 50); 
    }

  </script>
  
  
