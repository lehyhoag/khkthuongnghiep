  <style>
    body {
      position: relative;
      height: 100vh;
      margin: 0;
      overflow: hidden;
    }

    
      .nav-scroller {
        position: relative;
        z-index: 2;
        height: 2.75rem;
        overflow-y: hidden;
      }

      .nav-scroller .nav {
        display: flex;
        flex-wrap: nowrap;
        padding-bottom: 1rem;
        margin-top: -1px;
        overflow-x: auto;
        text-align: center;
        white-space: nowrap;
        -webkit-overflow-scrolling: touch;
      }
      .navbar {
          background-color: #fff;
          padding: 7px; /* Add padding for better spacing */
          margin-bottom: 0; /* Make the background transparent */
      }

      .navbar-collapse {
          justify-content: flex-end; /* Align the navbar to the right */
      }

      .navbar a{
        position: relative;
        font-size: 16px;
        color: #000000;
        margin-right: 30px;
        text-decoration: none;
      }
      .navbar a::after{
        content: "";
        position: absolute;
        left: 0;
        width: 100%;
        height: 2px;
        background: #000000;
        bottom: -5px;
        border-radius: 5px;
        transform: translateY(10px);
        opacity: 0;
        transition: .5s ease;
      }
      .navbar a:hover:after{
        transform: translateY(0);
        opacity: 1;
      }
    .line {
      height: 8px;
      background-color: black;
      position: absolute;
      cursor: pointer;
      left: 50%;
      transform: translateX(-50%);
      width: 4%;
      border-radius: 20px;
      z-index: 2;
      opacity: 0.5; /* Set the default opacity for unselected lines */
      transition: opacity 0.5s ease;
    }

    .line.selected {
      background-color: white;
      opacity: 1; /* Set the opacity for the selected line */
    }

    #line1 { bottom: 10%; left: 40%; }
    #line2 { bottom: 10%; left: 45%; }
    #line3 { bottom: 10%; left: 50%; }
    #line4 { bottom: 10%; left: 55%; }
    #line5 { bottom: 10%; left: 60%; }



    .model-container {
      display: none;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 20px;
      background-color: rgba(76,155,160);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      z-index: 0;
      width: 100%;
      height: 100%;
      animation: none;
    }

    .model-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .text-overlay1 {
      position: absolute;
      top: 35%;
      left: 30%;
      transform: translate(-50%, -50%);
      color: #ffffff;
      font-size: 19px;
      font-weight: bold;
      text-align: left;
      max-height: 70%;
      max-width: 40%;
      overflow-y: auto;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); /* Adjust the shadow properties as needed */

    }

    .text-overlay1 h3 {
      font-size: 30px;
      color: #131313;
      margin-bottom: 15px;
    }
    .text-overlay2 {
      position: absolute;
      top: 40%;
      left: 70%;
      transform: translate(-50%, -50%);
      color: #ffffff;
      font-size: 20px;
      font-weight: bold;
      text-align: right;
      max-height: 70%;
      max-width: 70%;
      overflow-y: auto;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); /* Adjust the shadow properties as needed */

    }

    .text-overlay2 h3 {
      font-size: 30px;
      color: #131313;
      margin-bottom: 15px;
    }
    .text-overlay3 {
      position: absolute;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #ffffff;
      font-size: 20px;
      font-weight: bold;
      text-align: right;
      max-height: 70%;
      max-width: 90%;
      overflow-y: auto;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); /* Adjust the shadow properties as needed */
    }
    .text-overlay1,
    .text-overlay2,
    .text-overlay3 {
      display: none; /* Initially hide text overlays on all screen sizes */
    }

    @media (min-width: 768px) {
      /* Show text overlays on screens with a width of 768 pixels or more */
      .text-overlay1,
      .text-overlay2,
      .text-overlay3 {
        display: block;
      }
    }

  </style>
</head>
<body>


